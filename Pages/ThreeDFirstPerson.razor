@page "/"

@if (ShowDebugLogUI)
{
    <div style="position: absolute; top: 10px; left: 10px; z-index: 10;">
        <textarea @ref="_logTextArea"
                  readonly
                  rows="20"
                  style="width: 400px; color: #0f0; background: rgba(0,0,0,0.85); border: 1px solid #333; font-family: monospace; font-size: 13px; padding: 6px; resize: both; overflow-y: auto;"
                  value="@BlazorUILog"></textarea>
    </div>
}

@if (ShowOptionsUI)
{
    <div style="position: absolute; top: 10px; right: 10px; z-index: 10; background: rgba(0,0,0,0.85); border: 1px solid #333; padding: 16px; border-radius: 6px; color: #ccc; font-family: monospace; min-width: 220px;">
        <h3 style="margin: 0 0 12px 0; font-size: 15px; color: #fff; border-bottom: 1px solid #444; padding-bottom: 8px;">Options</h3>
        <label style="display: block; font-size: 13px; margin-bottom: 4px;">Music Volume: @Volume.ToString("F2")</label>
        <input type="range" min="0" max="1" step="0.01"
               value="@Volume"
               @oninput="OnVolumeChanged"
               style="width: 100%; accent-color: #0f0;" />

        <label style="display: block; font-size: 13px; margin-bottom: 4px; margin-top: 12px;">Mouse Sensitivity X: @MouseSensitivity.ToString("F2")</label>
        <input type="range" min="0" max="3" step="0.01"
               value="@MouseSensitivity"
               @oninput="OnMouseSensitivityChanged"
               style="width: 100%; accent-color: #0f0;" />

        <label style="display: block; font-size: 13px; margin-bottom: 4px; margin-top: 12px;">Resolution Downsampling: @ResolutionDownsampling</label>
        <input type="range" min="1" max="9" step="1"
               value="@ResolutionDownsampling"
               @oninput="OnResolutionDownsamplingChanged"
               style="width: 100%; accent-color: #0f0;" />
    </div>
}

<Raylib OnInit="Init" OnResize="OnResize" OnRender="Render"></Raylib>
